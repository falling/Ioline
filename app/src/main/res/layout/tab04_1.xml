<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:background="@color/title"
        android:layout_height="50.0dip" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10.0dip"
            android:singleLine="true"
            android:text="@string/tab04_title"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:id="@+id/tab04_logsuccess"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/mine_title1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/touxiang"
                android:layout_centerHorizontal ="true"
                />

            <TextView
                android:id="@+id/mine_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal ="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mine_title1"
                android:text="在爱尔兰迷了路"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/mine_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_title2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal ="true"
                android:text="浙江大学" />

            <Button
                android:id="@+id/tab04_exitbut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/mine_title2"
                android:background="@drawable/exitlogin" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tab04_logout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tab04_login"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/touxiang"
                android:layout_centerHorizontal ="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal ="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tab04_login"
                android:text="登录注册"
                android:textSize="20sp" />


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/tab04_mytask"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/my_release_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/send_pressed"
                    android:clickable="false"
                    android:scaleType="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="我的发布"
                    android:textSize="20sp"
                    android:clickable="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_grab_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/get_pressed"
                    android:scaleType="center"
                    android:clickable="false"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="我的抢单"
                    android:textSize="20sp"
                    android:clickable="false"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:id="@+id/updatepwd_ll"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/modifypwd"
                android:scaleType="center"
                android:clickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="修改密码"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:clickable="false"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:id="@+id/fedback_ll"
            >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/feedback"
                android:scaleType="center"
                android:clickable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="反馈"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:clickable="false"/>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/about_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/about"
                android:scaleType="center"
                android:clickable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="关于"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:clickable="false"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>