<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#888"/>

    <com.lzy.ui.AlphaIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <com.lzy.ui.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/tab_index_normal"
            app:tabIconSelected="@mipmap/tab_index_pressed"
            app:tabText="首页"
            app:tabTextSize="14sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#B12934"/>

        <com.lzy.ui.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/tab_msg_normal"
            app:tabIconSelected="@mipmap/tab_msg_pressed"
            app:tabText="校园"
            app:tabTextSize="14sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#B12934"/>



        <com.lzy.ui.AlphaView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/tab_person_normal"
            app:tabIconSelected="@mipmap/tab_person_pressed"
            app:tabText="我的"
            app:tabTextSize="14sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#B12934"/>
    </com.lzy.ui.AlphaIndicator>
</LinearLayout>