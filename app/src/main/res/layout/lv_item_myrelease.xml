<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/touxian"
                android:id="@+id/dan_lv_touxiang_pic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dp">
            <!--第一行     -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字名字名字名字名字名字"
                    android:textSize="15sp"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:id="@+id/dan_lv_name" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="时间"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_marginRight="10dip"
                    android:singleLine="true"
                    android:id="@+id/dan_lv_time" />


            </LinearLayout>
            <!--第二行-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:src="@drawable/gender_symbol_girl"
                    android:id="@+id/dan_lv_gender_pic" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江大学城市学院"
                    android:textSize="15sp"
                    android:layout_marginRight="10dip"
                    android:singleLine="true"
                    android:id="@+id/dan_lv_school" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="类型"
                    android:textSize="15sp"
                    android:layout_marginRight="10dip"
                    android:id="@+id/dan_lv_type" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/dan_lv_location"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textSize="15sp"
                 />
        </LinearLayout>


        <!--第三行     -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西门鸭血粉丝汤，一勺辣椒。谢谢"
                android:textSize="15sp"
                android:id="@+id/dan_lv_content" />
        </LinearLayout>

        <!--第四行     -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:text="赚5元"
                android:textSize="15sp"
                android:textColor="@color/goldenrod"
                android:layout_marginRight="10dip"
                android:singleLine="true"
                android:id="@+id/dan_lv_money" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="8dp"
        android:id="@+id/dan_lv_phone"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:orientation="horizontal"
            android:id="@+id/ll_phone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:textSize="15sp"
                android:textColor="@color/goldenrod"
                android:layout_marginRight="10dip"
                android:singleLine="true"
                android:clickable="false"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"
                android:textColor="@color/goldenrod"
                android:layout_marginRight="10dip"
                android:singleLine="true"
                android:clickable="false"
                android:id="@+id/dan_tv_state"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>