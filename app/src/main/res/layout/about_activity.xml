<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/about_head"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/title"
        >
        <Button
            android:id="@+id/or_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#00ffffff"
            android:text="←"
            android:textColor="#ffffff"
            android:textSize="43sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于爱在线"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@drawable/logo"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/about_head"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Online校园服务平台"
        android:id="@+id/textView1"
        android:layout_below="@+id/imageView"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系我们 :"
        android:textSize="25dp"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服电话: xxx-xxxxxxxx"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服Q Q: xxxxxxxxx"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合作邮箱:xxxxxx@xx.xxx"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.0"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户使用协议"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_above="@+id/textView8"
        android:textColor="#B12934"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxx"
        android:id="@+id/textView8"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@xxxxxxxxxxx"
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="官方网址:xxxxxxxx"
        android:textSize="20dp"
        android:id="@+id/textView10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注微信:xxxxx"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"/>

</RelativeLayout>